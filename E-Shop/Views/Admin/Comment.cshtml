@using PagedList;
@using PagedList.Mvc;
@model IPagedList<EntityLayer.Entities.Comment>
@{
    ViewBag.Title = "Comment";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered">
<tr>
    <th>Content</th>
    <th>Product Information</th>
    <th>User</th>
    <th>Date</th>
    <th>Delete</th>
</tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.Contents</td>
    <td>@item.Product.Name @item.User.SurName </td>
    <td>@item.User.Name</td>
    <td>@item.Date</td>
    <td>@Html.ActionLink("Sil", "Delete", new { item.Id }, new { @class = "btn btn-danger", onclick = "return confirm ('Do You Want to Delete')" })</td>

</tr>

    }
</table>

